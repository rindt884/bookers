<h1>Editing Book</h1>

<%= form_for :book, url: book_path(@book), method: :patch do |f| %>

<% if @book.errors.any? %>
<%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
<table>
  
  <tr><th><%= f.submit 'Update Book' %></th></tr>
  
  <th><%= link_to "Show", @book %>
      |
      <%= link_to "Back", '/books' %>
  </th>
  
</table>
  
<% end %>