<% if flash[:notice] %>
Book was successfully updated.
<% end %>

<h1>Books</h1>

  <table>
    <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
      </tr>
  </thead>
 <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<h2>New book</h2>

<%= form_with model: Book.new do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h4>titlee</h4>
 <%= f.text_field :title %>
	
 <h4>body</h4>
 <%= f.text_area :body %>
 <table>
  <th><%= f.submit 'Create Book' %></th>
 </table>
<% end %>
